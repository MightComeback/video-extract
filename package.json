{
  "name": "video-extract",
  "version": "0.2.0",
  "description": "Turn a video share link (Fathom/Loom/YouTube/Vimeo) into an actionable brief; optionally extract transcript + media.",
  "type": "module",
  "bin": {
    "video-extract": "./bin/video-extract.js",
    "video-brief": "./bin/video-brief.js",
    "fathom-extract": "./bin/fathom2action-extract.js",
    "fathom2action": "./bin/fathom2action-brief.js"
  },
  "scripts": {
    "test": "node --test",
    "test:unit": "node --test",
    "test:ci": "node --test",
    "check-status": "node scripts/linear.mjs issue-state-type MIG-14",
    "lint": "node --check bin/fathom2action-brief.js bin/fathom2action-extract.js bin/video-extract.js bin/video-brief.js src/brief.js src/extractor.js src/providers/*.js src/utils.js scripts/linear.mjs",
    "release": "./scripts/release.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MightComeback/video-extract.git"
  },
  "keywords": [],
  "exports": {
    ".": "./src/extractor.js",
    "./brief": "./src/brief.js",
    "./package.json": "./package.json"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@linear/sdk": "^73.0.0",
    "jsdom": "^24.1.0",
    "puppeteer": "^22.12.1",
    "ytdl-core": "^4.11.5"
  },
  "devDependencies": {
    "cheerio": "^1.0.0-rc.12"
  }
}
